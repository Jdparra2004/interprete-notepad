{
    "name": "interpreter-notepad",
    "version": "1.0.0",
    "description": "Interpreter Notepad — herramienta de notas clínicas con traducción en tiempo real. © 2025 Juan David Parra Cantor.",
    "author": "Juan David Parra Cantor <juan.parrac@outlook.es>",
    "license": "Proprietary",
    "main": "main.js",

    "scripts": {
        "start": "electron .",
        "dev": "electronmon .",
        "build": "electron-builder"
    },

    "dependencies": {
        "electron-squirrel-startup": "^1.0.0"
    },

    "devDependencies": {
        "electron": "^30.0.0",
        "electron-builder": "^24.6.0",
        "electronmon": "^1.0.0"
    },

    "build": {
        "appId": "com.juanparra.interpreternotepad",
        "productName": "Interpreter Notepad",
        "copyright": 
        "© 2025 Juan David Parra Cantor. Todos los derechos reservados.",

        "directories": {
        "output": "dist"
        },

        "files": [
        "**/*"
        ],

        "extraResources": [
        {
            "from": "backend/app.exe",
            "to": "backend/app.exe"
        },
        {
            "from": "backend/glossary.json",
            "to": "backend/glossary.json"
        },
        {
            "from": "backend/config.json",
            "to": "backend/config.json"
        }
        ],

        "win": {
        "target": "nsis",
        "icon": "icon.ico"
        },

        "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "Interpreter Notepad"
        }
    }
}
